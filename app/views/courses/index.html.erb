<div class="top-section">
  <div class="row">
    <div class="top-column-main">
      <div style="width: 100%; position: relative; display; block; padding-left: 20px;">
        <h1>Courses</h1>
      </div>
    </div><!-- column main -->
  </div><!-- row -->
</div>

<br/><br/>

<div class="column-main" style="margin-top: 30px; padding-left: 30px;">

  <% if current_user.role == "admin" %>
     <% @courses.each do |course| %>
      <%= link_to(course_path(course)) do %>
      <div class="course-wrapper">
        <div class="course-tile">
          <div class="information">
            <%= image_tag course.course_icon %>
            <div class="title"><%= course.title %></div>
            <div class="description"><%= course.start_date.strftime("%A, %B %e") %></div>
          </div>

          <div class="progress-section">
            <div class="progress-bar">
              <div class="progress-bar-percent" style="width: <%= number_to_percentage(course.progress(current_user)) %>;"></div>
            </div>
            <div class="progress-percent">
               <% if course.progress(current_user).to_i > 0 %>
                <%= course.progress(current_user).to_i %>%
              <% else %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>

  <% elsif current_user.role == "online" || current_user.role == "boarding" %>
    <% @current_courses.each do |course| %>
    	<%= link_to(course_path(course)) do %>
        <div class="course-wrapper">
          <div class="course-tile">
            <div class="information">
            <%= image_tag course.course_icon %>
            <div class="title"><%= course.title %></div>
            <div class="description"><%= course.start_date.strftime("%A, %B %e") %></div>
          </div>

          <div class="progress-section">
            <div class="progress-bar">
              <div class="progress-bar-percent" style="width: <%= number_to_percentage(course.progress(current_user)) %>;"></div>
            </div>
            <div class="progress-percent">
               <% if course.progress(current_user).to_i > 0 %>
                <%= course.progress(current_user).to_i %>%
              <% else %>
              <% end %>
            </div>
          </div>
          </div>
        </div>
    	<% end %>
    <% end %>

    <% @locked_courses.each do |locked_course| %>
      <div class="course-wrapper">
        <div class="course-tile">
          <div class="information">
            <%= image_tag course.course_icon %>
            <div class="title"><%= course.title %></div>
            <div class="description"><%= locked_course.start_date.strftime("%A, %B %e") %></div>
          </div>
          <div class="course-tile-overlay">
            <div class="lock"></div>
            <div class="dates">Opens <%= locked_course.start_date.strftime("%A, %B %e") %></div>
          </div>
        </div>
      </div>
    <% end %>

    <% else %>
    Sorry, you do not have access to this page.


  <% end %>

</div><!-- column-main -->
<div class="column-right">
  <%= render "activity_feeds/sidebarindex"%>
</div>


