<div class="top-section">
  <div class="row">
    <div class="top-column-main">
      <div style="width: 100%; position: relative; display; block; padding-left: 20px;">
        <h1>Students & Network</h1>
        <!-- ***** CREATE POST BUTTON ***** -->
        <div class="button-right">
          <a id="show-filters"><h4>Filters</h4></a>
        </div>
      </div>
    </div><!-- column main -->
  </div><!-- row -->
</div>

<div class="row" style="height: 100%;">
   <div class="column-main" style="margin-top: 67px;"> 

    <div id="alumni-container">
     <!--  <div id="tag_cloud">
        <% tag_cloud User.tag_counts, %w{s m l} do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div> -->
      <br/>
      <div id="user-search-form">
        <%= search_form_for @q, :remote => "true" do |f| %>
          <div class="filter">
            <%= f.label :s, 'Sort by' %>
            <%= f.collection_select :s, User::SORT_FIELDS.to_a, :first, :last, selected: users_sort_value, include_blank: false %>
          </div>
          <div class="filter">
            <%= f.label :program_type_cont, 'Type' %>
            <%= f.select :online_cont, ['boarding', 'online'], include_blank: true %>
          </div>
          <div class="filter">
            <%= f.label :first_name_cont, 'First Name Contains' %>
            <%= f.text_field :first_name_cont %>
          </div>
          <div class="filter">
            <%= f.label :last_name_cont, 'Last Name Contains' %>
            <%= f.text_field :last_name_cont %>
          </div>
          <div class="filter">
            <%= f.submit 'Search', :id => "filter-submit" %>
          </div>
            
          <% end %>
        </div>

      <div id="users">
        <%= render 'users/userBoarding' %>
      </div><!-- users -->
      <br />
    </div><!-- alumni-container -->
  </div><!-- column-main -->

  <div class="column-right">
    <% @leaders.each do |u| %>
    <%= u.first_name %><%= u.pcounter %><br/>
    <% end %>
  </div><!-- column-right -->
</div><!-- row -->


<script type="text/javascript">
  $('#show-filters').click(function(){
    $('#user-search-form').toggle('5000', 'easeOutCirc', function() {});
    $('#users').toggleClass('active', [3000]);
    return false;
  });
</script>