<% if post %>
    <%  myPostIDs = []  
    @posts = Post.all
  %>


  <% @posts.each do |post| %>
    <% if post.user_id ==  current_user.id %>
    <% myPostIDs << post.user_id %>
    <%  end %>
  <%  end %>


<% if  myPostIDs.include? post.user_id  %>
<% if User.where(:id => post.user_id).exists? %>
  <div id="post">
    <% @user = User.find_by_id(post.user_id) %>

    <% if post.file_file_name == nil %>
      <div class="content">
        <% if @user.avatar != nil %>
          <div class="picture"><%= image_tag @user.avatar.url(:medium) %></div>
        <% end %>
        <%= link_to student_profile_path(@user) do %><div class="name"><%= @user.full_name %></div><% end %>
         created post
        <%= link_to post_path(post) do %>
          <%= raw Rinku.auto_link(truncate(post.content, length: 50), :all, 'target="_blank"') %>
        <% end %>
        <div class="timestamp"><%= post.created_at.to_date.to_formatted_s( :long_ordinal ) %></div>
      </div>
    <% else %>
      <div class="content">
        <% if @user.avatar != nil %>
          <div class="picture"><%= image_tag @user.avatar.url(:medium) %></div>
        <% end %>
        <%= link_to student_profile_path(@user) do %><div class="name"><%= @user.full_name %></div><% end %>
         created post
        <%= link_to post_path(post) do %>
          <%= raw Rinku.auto_link(truncate(post.content, length: 50), :all, 'target="_blank"') %>
        <% end %>
        <div class="timestamp"><%= post.created_at.to_date.to_formatted_s( :long_ordinal ) %></div>
      </div>
    <% end %>   

    </div>
    <% end %>
  <% end %>
<% end %>
