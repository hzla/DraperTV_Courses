<% @activities = Activity.where.not(user_id: current_user.id).order("created_at desc").page(params[:page]).per(5) %>
$('#notify').empty();
$('#notify').append('<%= escape_javascript(render :partial => 'layouts/activity', :collection => @activities) %>');

$('#sushi').append('<%= j render(@activities) %>');
<% if (@activities.current_page < @activities.num_pages) %>
        $('.pagination').replaceWith('<%= j paginate(@activities) %>');
<% else %>
        $('.pagination').remove();
<% end %>
<% sleep 1 %>