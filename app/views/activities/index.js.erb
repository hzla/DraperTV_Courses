<% @activities = Activity.order("created_at desc").page(params[:page]).per(5) %>
$('#notify').empty();
$('#notify').append('<%= escape_javascript(render :partial => 'layouts/activity', :collection => @activities) %>');


$('#Activities').append('<%= escape_javascript(render :partial => 'layouts/activity', :collection => @activities) %>');
<% if (@activities.current_page < @activities.num_pages) %>
        $('.pagination').replaceWith('<%= escape_javascript(render :partial => 'layouts/activity', :collection => @activities) %>');
<% else %>
        $('.pagination').remove();
<% end %>
<% sleep 1 %>




