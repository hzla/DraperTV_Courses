<%= subscribe_to "/layouts/assignments" %>

<div class="top-section">
  <div class="top-column-main">
      <div style="width: 100%; position: relative; display; block; padding-left: 20px;">
       <h1>Activity Feed</h1>
      </div>
  </div><!-- row -->
</div>

<div class="column-main">
	<div id="ActivityFeed">
		<% @activity_feeds.each do |activity_feed| %>
		  <%= ActivityFeedPresenter.new(activity_feed, self).render_activity_feed %>

		    <!-- Inner-Div-comments -->
		    <div class="col-right-comments">
		    <div id="comments_container">
		      <div id="<%= @assignment.id %>">
		        <%= render "user_comments/uacomments" %>
		      </div>
		    </div>
		      <div class="col-right-addcomment">
    			<%= render "user_comments/addcomment_uafeed" %>
  			</div><!-- col-right-addcomment -->
		  </div><!-- Inner-Div-comments -->

		<% end %>
	</div>
	<%= paginate @activity_feeds %>


</div> <!-- column-main -->


<div class="column-right">
  <div class="col-right-top-section">
    <h3></h3>
  </div>
  <div class="col-right-comments">
    <div id="comments_container">

      </div>
    </div>
  </div><!-- col-right-comments -->
  <div class="col-right-addcomment">

  </div><!-- col-right-addcomment -->
</div><!-- column-right -->
