<div class="top-section">
  <div class="row">
    <div class="top-column-main">
      <div style="width: 100%; position: relative; display; block; padding-left: 20px;">
        <h1><%= @event.name %></h1>

        <% if @event.user_id == current_user.id %>
          <div class="button-right">
            <%= link_to [@event], :confirm => 'Are you sure you want to remove this event? This cannot be undone.', :action => "destroy", :method => :delete do %>
              <div class="circle-button"><i class="fa fa-trash-o"></i></div>
            <% end %>
          </div>
        <% else %>
        <% end %>
      </div>

    </div><!-- column main -->
  </div><!-- row -->
</div>

<div class="column-main" style="padding-left: 25px;">
  <ul class="breadcrumb">
    <li><%= link_to 'Events', events_path %> <span class="divider">/</span></li>
    <li><%= link_to @event.name, event_path(@event) %><span class="divider">/</span></li>
    <li>Edit</li>
  </ul>

   <% if @event.user_id == current_user.id %>
   <div id="event-show" style="margin-left: 0;">
    <%= render 'form' %>
  </div>
  <% else %>
  Sorry, only the owner of the event can make changes.
  <% end %>
</div>
<div class="column-right"></div>
