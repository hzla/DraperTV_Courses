<html lang="en" style="overflow: visible;">

<head>
  <title>Draper University Online School</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <!-- install fonts -->
  <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700,400italic' rel='stylesheet' type='text/css'>
  <!-- install icons -->
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  <%= javascript_include_tag 'jquery', 'application' %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
  <style>
  	body { font-family: 'proxima_nova';}
  </style>

  <!-- google tracking -->
  <script type="text/javascript">
    var fb_param = {};
    fb_param.pixel_id = '6009982432893';
    fb_param.value = '0.00';
    fb_param.currency = 'USD';
    (function(){
      var fpw = document.createElement('script');
      fpw.async = true;
      fpw.src = '//connect.facebook.net/en_US/fp.js';
      var ref = document.getElementsByTagName('script')[0];
      ref.parentNode.insertBefore(fpw, ref);
    })();
    </script>

    <noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/offsite_event.php?id=6009982432893&amp;value=0&amp;currency=USD" /></noscript>
</head>
<body>

  <!-- ***************** -->
  <!-- **** Navbar ***** -->
  <!-- ***************** -->

    <% if user_signed_in? %>
      <div class="navbar navbar-fixed-top sb-slide">
        <div class="navbar-inner">
          <div class="container">

            <div class="left-blue">
              <div id="left-menu" class="sb-toggle-left">
                <div id="menu-icon"></div>
                <div class="title">menu</div>
              </div>
              <div id="logo"></div>
            </div>

            <!-- ** Show Score in Nav ** -->
            <% if current_user.pcounter != nil %>
              <div class="right-score"><%= number_with_delimiter(current_user.pcounter, :delimiter => ',') %></div>
            <% else %>
            <% end %>

            <ul class="nav pull-right">
              <!-- <a id="right-menu" href="#right-menu" class="sidr-click"> -->
              <li class="dropdown">
                <div class="sb-toggle-right dropdown" data-toggle="dropdown" href="#">
                  <i class="fa fa-inbox fa-2x empty" style="padding-top: 10px; padding-right: 12px;" id="notifications"></i>
                  <div class="red-circle"><p></p></div>
                </div><!-- sb-toggle-right -->
                <div class="dropdown-menu" id="notification-dropdown" style="right: 0;">
                  <% if user_signed_in? %>
                    <% @notified = User.find(current_user.id) %>
                      <%= simple_form_for @notified, :remote => true do |f| %>
                        <% if @notified.errors.any? %>
                          <div id="error_explanation">
                            <h2><%= pluralize(@notified.errors.count, "error") %> prohibited this user from being saved:</h2>
                            <ul>
                            <% @notified.errors.full_messages.each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                            </ul>
                          </div>
                        <% end %><!-- errors -->

                        <div class="field">
                          <%= f.hidden_field :ncounter %>
                        </div>
                      <% end %>
                  <% end %>

                  <div id="ajax-loading">
                    <%= image_tag("loading1.gif") %>
                  </div>

                  <div id="notify" class="section-link">
                  </div><!-- notify -->

                  <div id="load-more">
                    <div class="view-all">
                      <%= link_to 'View All', activities_path %>
                    </div>
                    <div class="clear-notifications">
                    </div>
                  </div>

                  <%= link_to "", activities_path, :data => { :'class' => 'displayLink' }, :remote => true %>

                  <script type="text/javascript">
                    <% if user_signed_in? %>
                      $( ".sb-toggle-right" ).on( "click", function() {
                         if($( "html" ).hasClass( "sb-active-right" )) {
                          $("#notifications").removeClass("notifications");
                          $('#notifications').addClass("empty");
                          $('.red-circle p').empty();
                          $('.red-circle').hide();
                          $('form#edit_user_' + '<%= current_user.id %>').submit();
                        }
                        else {
                          $('a[data\-class="displayLink"]').click();
                          $('.red-circle p').empty();
                          $('.red-circle').hide();
                          $('form#edit_user_' + '<%= current_user.id %>').submit();
                        }
                      });

                      $('#user_ncounter').val(0);
                      $('.red-circle p').text('<%= current_user.ncounter %>');

                      var n = $('.red-circle p').text();
                      n =  parseInt(n);

                      if( '<%= current_user.ncounter %>' === 0 ) {
                        $('.red-circle p').empty();
                        $("#notifications").removeClass("notifications");
                        $('#notifications').addClass("empty");
                        $('.red-circle').hide();
                      }
                      else {
                        //$('#notifications').text('<%= current_user.ncounter %>');
                        $('#notifications').removeClass('empty');
                        $('#notification').addClass('notifications');
                        $('.red-circle').show();
                        $('.red-circle p').text('<%= current_user.ncounter %>');
                      }
                      if(n === 0 ) {
                        $('.red-circle p').empty();
                        $("#notifications").removeClass("notifications");
                        $('#notifications').addClass("empty");
                        $('.red-circle').hide();
                      }
                      else {
                          // code to be executed if condition is false
                      }
                    <% end %>
                  </script>
                </div><!-- dropdown menu -->
              </li><!-- dropdown -->

              <li class="dropdown">
                <div class="sb-toggle-right dropdown" data-toggle="dropdown" href="#">
                  <i class="fa fa-gear fa-2x empty" style="padding-top: 10px; padding-right: 12px;" id="notifications"></i>
                </div>
                <ul class="dropdown-menu">
                  <li role="menu"><%= link_to 'My Profile', student_profile_path(current_user)  %></li>
                  <li role="menu"><%= link_to 'Profile Setting',  edit_user_path(current_user) %></li>
                  <li role="menu"><%= link_to 'Account Setting',  edit_user_registration_path %></li>

                  <li class="divider"></li>
                  <li role="menu"><%= link_to 'Leave Feedback', feedbacks_path %></li>
                  <li role="menu"><%= link_to 'Resources', resources_path %></li>
                  <li class="divider"></li>
                  <li role="menu"><%= link_to 'Log Out', logout_path, :use_rails_ajax => false %></li>
                </ul>
              </li><!-- dropdown -->

            </ul>
          </div>
        </div>
      </div>
    <% else %>
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <%= link_to '/' do %>
              <div id="logo"></div>
            <% end %>
            <ul class="nav pull-right">
              <li id="home_link"><%= link_to "Apply", '/apply' %></li>
              <li id="home_link"><%= link_to "Log In", login_path %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- took out flash messages here -->


  <div id="sb-site" style="padding-top: 42px; overflow: visible; height: auto; background: none; z-index: 0;  height: calc(100% - 42px;); ">


  <!-- ***************** -->
  <!-- ***** Body ****** -->
  <!-- ***************** -->

    <% if user_signed_in? %>
      <div style="display: block; width: 100%; overflow: visible; background: white; height: auto;">
        <div id="loadingbar-frame"></div>
        <div id="main-body">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <div id="logged-out-main">
    		<%= yield %>
      </div>
    <% end %>

  </div><!-- end sb-site -->

  <!-- ***************** -->
  <!-- *** Sidebars **** -->
  <!-- ***************** -->

  <!--<div class="sb-slidebar sb-left">-->
    <% if user_signed_in? %>
      <%= render 'layouts/sidenav' %>
    <% end %>
  <!--</div>-->

  <div class="sb-slidebar sb-right" id="right-menu">
    <div class="top-bar">
    </div>


  </div><!-- #right-menu -->

  <script type="text/javascript">
    $(function() {
      $('#ajax-loading').hide();  // hide it initially.
      $(document)
        .ajaxStart(function() {
          $('#ajax-loading').show(); // show on any Ajax event.
        })
        .ajaxStop(function() {
          $('#ajax-loading').hide(); // hide it when it is done.
      });
    });
  </script>

