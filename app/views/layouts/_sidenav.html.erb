<div id="side-nav">

	<% if content_for?(:side_nav) %>
		<%= yield :side_nav %>
	<% else %>
		<div class="profile-info">
			<% if current_user %>
				<%= image_tag current_user.avatar.url, :class => "profile-pic" %>
				<div class="profile-text">
					<div class="profile-name">
						<%= current_user.full_name %>
					</div>
					<div class="profile-karma">
						<%= current_user.karma || 0 %> - <%= current_user.title %>
					</div>
				</div>
			<% end %>
		</div>
		<div class="main">
			<%= link_to topics_path, :class => "side-link" do %>
				COURSES
			<% end %>
			<%= link_to events_path, :class => "side-link" do %>
				CALENDAR
			<% end %>
			<%= link_to amas_path, :class => "side-link" do %>
				MONTHLY AMA
			<% end %>
			<%= link_to events_path, :class => "side-link" do %>
				WEEKLY STREAM
			<% end %>
			<% if current_user %>
				<%= link_to 'LOG OUT', logout_path, :use_rails_ajax => false, :class => "side-link logout" %>
			<% end %>
		</div>
	<% end %>
</div>

