<div id="side-nav">

	<% if content_for?(:side_nav) %>
		<%= yield :side_nav %>
	<% else %>
		<div class="profile-info">
			<% user = current_user %>
			<% if user %>
				<%= image_tag user.avatar.url, :class => "profile-pic" %>
				<div class="profile-text">
					<div class="profile-name">
						<%= user.full_name %>
					</div>
					<div class="profile-karma">
						<%= user.karma || 0 %> - <%= user.title %>
					</div>
				</div>
			<% else %>
				<%= link_to '/users/sign_in' do %>
					<p class="green sign-in">SIGN IN</p>
				<% end %>
			<% end %>

		</div>
		<div class="main">
			<%= link_to topics_path, :class => "side-link #{ 'active' if @page == 'courses' }" do %>
				COURSES
			<% end %>
			<%= link_to events_path, :class => "side-link #{ 'active' if @page == 'calendar' }" do %>
				CALENDAR
			<% end %>
			<%= link_to amas_path, :class => "side-link #{ 'active' if @page == 'ama' }" do %>
				MONTHLY AMA
			<% end %>
			<%= link_to amas_path, :class => "side-link #{ 'active' if @page == 'amas' }" do %>
				BIWEEKLY STREAM
			<% end %>
		</div>
	<% end %>
</div>

