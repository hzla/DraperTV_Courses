<header id="landing-header">
  <div id="header-content">
      <ul class="header-mid-right">
        <li class="header-item <%= 'active' if request.original_url.include?("playlists") %>">
          <%= link_to "http://drapertv.com/playlists" do %>
            SERIES
          <% end %>
        </li>
        <li class="header-item <%= 'active' if request.original_url.include?("livestreams") %>">
          <%= link_to "http://drapertv.com/livestreams" do %>
            LIVESTREAMS
          <% end %>
        </li>
        <li class="header-item">
          <%= link_to "http://www.draperuniversity.com", target: "_blank" do %>
            DRAPER UNIVERSITY
          <% end %>
        </li>
      </ul>

    <div class="header-logo">
      <%= link_to root_path do %>
        <%= image_tag 'drapertv-logo.png', :class => "header-item logo" %>
      <% end %>
    </div>

      <div class="header-mid-left no-mobile">
        <%= form_for "http://drapertv.com/searches" do |f| %>
          <%= f.text_field :terms, :class => "search-input", placeholder: "Search" %>
        <% end %>
        
        <% if current_user %>
          <ul class="nav">
            <li class="dropdown">
              <div class="sb-toggle-right dropdown" data-toggle="dropdown" href="#">
                <i class="fa fa-gear fa-2x empty"></i>
              </div>
              <ul class="dropdown-menu">
                <li role="menu"><%= link_to 'My Profile', student_profile_path(current_user)  %></li>
                <li role="menu"><%= link_to 'Settings',  edit_user_path(current_user) %></li>
                <li role="menu"><%= link_to 'Change Password',  edit_user_registration_path %></li>
                <li class="divider"></li>
                <li role="menu"><%= link_to 'Log Out', logout_path, :use_rails_ajax => false %></li>
              </ul>
            </li><!-- dropdown -->
          </ul>
        <% end %>
      </div>


  </div>
</header>