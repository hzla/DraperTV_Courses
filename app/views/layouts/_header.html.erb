  </div>
  <div class="header-right">
    <li class="header-item">
      <%= link_to "http://www.draperuniversity.com" do %>
        DRAPER UNIVERSITY
      <% end %>
    </li>
    <li class="header-item">
      <%= link_to "http://www.herocity.com/" do %>
        HERO CITY
      <% end %>
    </li>
    <li class="header-item">
      <%= link_to "http://www.drapertv.com" do %>
        DRAPERTV
      <% end %>
    </li>
    <li class="header-item">
      <%= link_to "http://www.draperuniversity.com/investment" do %>
        INVESTMENT
      <% end %>
    </li>
    <li class="header-item">
      <%= link_to "http://www.draperuniversity.com/blog/" do %>
        ABOUT
      <% end %>
    </li>
