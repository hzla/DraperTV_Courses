<div class="row">
  <div class="sign-in-container">
    <div class="sign-in">
      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: {class: "sign in"}) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %></div>

        <div><%= f.button :submit, "Send", :class => "button green" %></div>
      <% end %>
      <div class="separator"></div>
      <div class="links">
          <span class="already-account">Already have an account?</span>
          <%= link_to "SIGN IN", new_session_path(resource_name, lesson_id: params[:lesson_id]), :class => "devise-link login-link" %>
      </div>
    </div>
  </div>
</div>
