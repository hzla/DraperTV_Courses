<div class="top-section">
  <div class="row">
    <div class="top-column-main">
      <h1>Sign Up</h1>
    </div><!-- column main -->
  </div><!-- row -->
</div>


<div class="column-main">
  <div class="sign-in-container">
    
    <%= link_to '/auth/facebook' do %>
      <div class="fb-connect-btn">
        <%= image_tag "fb.svg", :class => "fb-icon" %>
        <p class="fb-btn-text">
          CONNECT WITH FACEBOOK
        </p>
      </div>
    <% end %>
    <p id="or">
      OR
    </p>
    <div class="sign-in sign-up">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= f.input :email, label: 'EMAIL:' %>
        <%= f.input :password, label: "PASSWORD:" %>
        <%= f.input :password_confirmation, label: "PASSWORD CONFIRMATION:" %>
        <%= f.button :submit, "SIGN UP", :use_rails_ajax => false %>
      <% end %>

      <div class="separator"></div>
      <div class="links">
          <span class="already-account">Already have an account?</span>
          <%= link_to "LOG IN", new_session_path(resource_name, lesson_id: params[:lesson_id]), :class => "devise-link login-link" %>
      </div>
    </div>
  </div>
</div><!-- column-main -->

<div class="column-right">
</div>

