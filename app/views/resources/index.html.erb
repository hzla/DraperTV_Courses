                    <div class="image"><%= image_tag(resource.image(:large)) %></div>
                  </div>
                  <div class="text-section">
                    <div class="title"><%= resource.title %></div>
                    <div class="description"><%= resource.description %></div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>

    <br />

    <div class="section-header">Recommended Movies</div>
      <div class="resources-container">
        <% @resources.each do |resource| %>
          <% if resource.category == "movie" %>
           <% if resource.url != nil %>
