<div class="top-section">
  <div class="row">
    <div class="top-column-main">
      <div style="width: 100%; position: relative; display; block; padding-left: 20px;">
        <h1>Resources</h1>
      </div>
    </div>
  </div>
</div>

<br/><br/>

<div class="column-main" style="margin-top: 30px; padding-left: 30px;">
  <div id="resources">
    <div class="section-header">Draper University Resources</div>
      <div class="resources-container">
        <% @resources.each do |resource| %>
          <% if resource.category == "draper" %>
            <% if resource.url != nil %>
              <%= link_to resource.url, target: "_blank" do %>
              <div class="section">
                <div class="icon-section">
                  <div class="image"><%= image_tag(resource.image(:large)) %></div>
                </div>
                <div class="text-section">
                  <div class="title"><%= resource.title %></div>
                  <div class="description"><%= resource.description %></div>
                </div>
              </div>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <br />

    <div class="section-header">Recommended Reading</div>
    <div class="resources-container">
        <% @resources.each do |resource| %>
          <% if resource.category == "reading" %>
           <% if resource.url != nil %>
              <%= link_to resource.url, target: "_blank" do %>
              <div class="section">
                <div class="icon-section">
                  <div class="image"><%= image_tag(resource.image(:large)) %></div>
                </div>
                <div class="text-section">
                  <div class="title"><%= resource.title %></div>
                  <div class="description"><%= resource.description %></div>
                </div>
              </div>
            <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>

    <div class="section-header">Recommended Videos</div>
      <div class="resources-container">
        <% @resources.each do |resource| %>
